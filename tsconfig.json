{
	"compilerOptions": {
		"declaration": true,
		"outDir": "out",
		"module": "commonjs",
		"target": "es2015",
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"lib": [
			"es7",
			"dom"
		],
		"typeRoots": [
            "./node_modules/@types",
			"types/"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
